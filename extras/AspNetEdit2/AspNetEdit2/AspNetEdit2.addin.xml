<Addin id          = "AspNetEdit2"
       namespace   = "MonoDevelop"
       name        = "ASP.NET visual editor"
       author      = "Petar Dodev"
       copyright   = "MIT X11"
       url         = "http://www.monodevelop.com/"
       description = "WYSIWYG HTML editor for ASP.NET project's views."
       category    = "Web Development"
       version     = "0.1">

	<Dependencies>
		<Addin id="Core" version="3.1.0"/>
		<Addin id="Ide" version="3.1.0"/>
	</Dependencies>
	
	<Extension path = "/MonoDevelop/Ide/DisplayBindings">
		<DisplayBinding id = "AspNetEdit2DisplayBinding"
		                supportedformats = "Source Code"
		                class = "AspNetEdit2.Integration.AspNetEdit2DisplayBinding" />
	</Extension>
</Addin>
